@model TrainingIoT.RemoteControl.App.Models.FeatureModel
<div class="form-group">
    <label class="col-sm-2 control-label">Switch</label>
    <div class="col-sm-10">
        @Html.ActionLink("ON", "ChangeSwitch", new { id = Model.DeviceId, port = Model.Port, on = true }, new { @class = "btn btn-default btn-lg" })
        @Html.ActionLink("OFF", "ChangeSwitch", new { id = Model.DeviceId, port = Model.Port, on = false }, new { @class = "btn btn-default btn-lg" })
    </div>
</div>

