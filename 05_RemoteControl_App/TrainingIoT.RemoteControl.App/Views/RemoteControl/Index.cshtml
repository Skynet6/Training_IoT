@model IList<TrainingIoT.RemoteControl.App.Models.DeviceInfoModel>
<table class="table table-striped table-hover">

    <tr>
        <th>#</th>
        <th>Device</th>
    </tr>

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="2">
                No devices found.
            </td>
        </tr>
    }

    @{
        var deviceIndex = 1;
    }
    @foreach (var device in Model)
    {
        <tr>
            <td>@(deviceIndex++)</td>
            <td>@Html.ActionLink(device.DeviceId, "Device", new { id = device.DeviceId })</td>
        </tr>
    }

</table>