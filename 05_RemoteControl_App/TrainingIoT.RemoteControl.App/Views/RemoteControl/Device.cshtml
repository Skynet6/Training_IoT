@model TrainingIoT.RemoteControl.App.Models.DeviceDetailModel
<form class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Device ID</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.DeviceId</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">LED</label>
        <div class="col-sm-10">
            @Html.ActionLink("ON", null, new { id = Model.DeviceId, state = "1" }, new { @class = "btn btn-default btn-lg" })
            @Html.ActionLink("OFF", null, new { id = Model.DeviceId, state = "0" }, new { @class = "btn btn-default btn-lg" })
        </div>
    </div>
</form>
